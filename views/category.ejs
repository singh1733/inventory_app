<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1><%= category.name %></h1>
    <a href="/category/<%=category.id%>/item/create">
        <button>Add item</button>
      </a>
    <ul>
      <%if (locals.items) {%> <% items.forEach ( item=> { %>
      <li><a href="/category/<%= item.id %>"><%= item.name %></a></li>
      <% }); %> <%}%>
    </ul>
    <form
      action="/category/<%= category.id %>/delete"
      method="POST"
      style="display: inline"
    >
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this category?');"
      >
        Delete
      </button>
    </form>
    <a href="/category/<%= category.id %>/edit">Change Category Name</a>
  </body>
</html>
