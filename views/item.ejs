<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>

  <body>
    <% const editLink = categoryID ?
    `/category/${category.id}/item/${item.id}/edit` : `/items/${item.id}/edit`;
    const backLink = categoryID ? `/category/${categoryID}` : '/items'; const
    deleteAction = categoryID ?
    `/category/${category.id}/item/${item.id}/delete` :
    `/items/${item.id}/delete`; %>
    
    <h1> <%= category && category.name || "No Category" %></h1>
    <h1>Item Name: <%= item.name %></h1>

    <p>Description: <%= item.description %></p>
    <a href="<%= editLink %>">Edit Item</a>
    <form action="<%= deleteAction %>" method="POST" style="display: inline">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this item?');"
      >
        Delete
      </button>
    </form>

    <a href="<%= backLink %>">
      Back to <%= categoryID ? 'category' : 'items' %>
    </a>
  </body>
</html>
